<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="name_info"
            type="String" />
        <variable
            name="id_info"
            type="String" />
        <variable
            name="phone_info"
            type="String" />
        <variable
            name="email_info"
            type="String" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="600dp"
        android:layout_marginTop="50dp"
        android:id="@+id/userInfo"
        android:orientation="vertical"
        android:theme="@style/BlueTileWhiteText">

        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{id_info}"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:gravity="left"
            android:text="@{name_info}"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:gravity="left"
            android:text="@{email_info}"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:gravity="left"
            android:text="@{phone_info}"
            ></TextView>

    </LinearLayout>

</layout>

